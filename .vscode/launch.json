    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend: FastAPI (Uvicorn)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.app:app",
                "--host", "127.0.0.1",
                "--port", "8000",
                "--reload",
                "--reload-dir", "backend"
            ],
            "justMyCode": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Frontend: Next.js (admin-ui)",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "cwd": "${workspaceFolder}/admin-ui",
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Run Dev (Backend + Frontend)",
            "configurations": [
                "Backend: FastAPI (Uvicorn)",
                "Frontend: Next.js (admin-ui)"
            ],
            "stopAll": true
        }
    ]
}